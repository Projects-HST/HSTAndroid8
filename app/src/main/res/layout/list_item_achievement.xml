<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_list"
            android:layout_width="95dp"
            android:layout_height="90dp"
            android:layout_margin="20dp"
            android:elevation="5dp"
            android:background="@drawable/shadow_round"
            android:contentDescription="@string/app_name"/>

        <TextView
            android:id="@+id/title_achieve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_list"
            android:layout_marginTop="25dp"
            android:text="@string/txt_content"
            android:textColor="@color/title_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/title_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_achieve"
            android:layout_toEndOf="@id/img_list"
            android:layout_marginTop="8dp"
            android:text="@string/txt_content"
            android:textSize="12sp"
            android:textColor="@color/lite_grey"
            android:maxLines="2"/>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_toEndOf="@id/img_list"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/title_content"
            android:background="@color/lite_grey" />

        <ImageView
            android:id="@+id/ic_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_toEndOf="@id/img_list"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_calender" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ic_calendar"
            android:layout_below="@id/view"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:text="@string/txt_content"
            android:textSize="12sp"
            android:textColor="@color/lite_grey" />

    </RelativeLayout>

</RelativeLayout>