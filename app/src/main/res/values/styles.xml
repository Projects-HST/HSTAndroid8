<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="datePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/live_event_fab</item>
        <item name="android:textColorPrimary">@color/header_txt</item>
        <item name="android:textColorSecondary">@color/header_txt</item>
        <item name="android:textColorTertiary">@color/header_txt</item>
        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="TextInputLayoutTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/text_grey</item>
        <item name="colorPrimaryDark">@color/text_grey</item>
        <item name="colorAccent">@color/text_grey</item>
    </style>

</resources>